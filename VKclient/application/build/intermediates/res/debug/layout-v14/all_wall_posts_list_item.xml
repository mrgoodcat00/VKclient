                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 years ago"
                    android:id="@+id/textView2" android:layout_marginLeft="0dp"
                    android:layout_below="@+id/repost_starter_user_name"/>
        </RelativeLayout>

    </LinearLayout>
